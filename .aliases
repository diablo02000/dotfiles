# Custom shell alias

# Change directory to home subdirectory
alias cdl='cd ~/Downloads'
alias cdd='cd ~/Documents'
alias cdi="cd ~/Images"

# Reload zsh configuration file
alias zsh-reload='source ~/.zshrc'

# Create working directory
# use 'createWorkingSpace' from functions file.
alias cdw='createWorkingSpace'

# Send HTTP curl with JSON content type
alias jcurl='curl -s -H "Content-Type: application/json"'

# Send HTTP curl with trace time
alias tcurl='curl -s -o /dev/null -w @"${HOME}/.curl/time-taken.txt"'

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# Get current day
alias today='date +%F" "%X'

# Get current week
alias week='date +%V'

# Edit /etc/hosts file
alias hosts="sudo vim /etc/hosts"

# Show IP addresses
alias pubip='dig +short myip.opendns.com @resolver1.opendns.com'
alias privip="ip -j -br -4 addr list | jq -r '.[] | select(.operstate==\"UP\") | .addr_info[].local'"

# Pipe my public key to my clipboard.
alias pubkey="more ${DOTFILES_SSH_KEY_FULL_PATH}.pub | xclip -selection clipboard | echo '=> Public key copied to pasteboard.'"

# Pipe my private key to my clipboard.
alias prikey="more ${DOTFILES_SSH_KEY_FULL_PATH} | xclip -selection clipboard | echo '=> Private key copied to pasteboard.'"

# Fix trim trailing whitespace from file
alias ftrailing_whitespace="sed -i 's/[ \t]*$//'"

#
# Linter
#
# Shell linter
alias scheck='shellcheck -x'

#
# Database client
#
# Overload db client to redirect console
# to file.
alias psql='dbClientTrace psql'
alias mysql='dbClientTrace mysql'
